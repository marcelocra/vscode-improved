{
  "name": "Post-Apocalyptic Night",
  "type": "dark",
  "colors": {
    "editor.background": "#2b2b2d",
    "editor.foreground": "#c9c9b9",
    "editor.selectionBackground": "#3a3a3f",
    "editor.lineHighlightBackground": "#333335",
    "editorCursor.foreground": "#ffcc66",

    "sideBar.background": "#262629",
    "sideBar.foreground": "#b1b1a7",
    "panel.background": "#2e2e30",
    "activityBar.background": "#262629",
    "activityBar.foreground": "#ffab91",
    "activityBarBadge.background": "#c94f4f",
    "statusBar.background": "#262629",
    "statusBar.foreground": "#9e9e87",
    "tab.activeBackground": "#3a3a3f",
    "tab.inactiveBackground": "#262629",

    "editorGutter.background": "#2b2b2d",
    "editorGutter.modifiedBackground": "#ffcc66",
    "scrollbarSlider.background": "#5b5b5e"
  },
  "semanticTokenColors": {
    "comment": {
      "foreground": "#848484",
      "fontStyle": "italic"
    },
    "string": {
      "foreground": "#d8bd89"
    },
    "number": {
      "foreground": "#99c794"
    },
    "variable": {
      "foreground": "#ffab91"
    },
    "variable.readonly": {
      "foreground": "#77a3b1"
    },
    "parameter": {
      "foreground": "#d4a169"
    },
    "keyword": {
      "foreground": "#c94f4f"
    },
    "operator": {
      "foreground": "#b4b79e"
    },
    "function": {
      "foreground": "#77a3b1"
    },
    "class": {
      "foreground": "#d4a169"
    },
    "namespace": {
      "foreground": "#99c794"
    },
    "enum": {
      "foreground": "#d8bd89"
    },
    "boolean": {
      "foreground": "#d46a6a"
    },
    "struct": {
      "foreground": "#77a3b1"
    },
    "macro": {
      "foreground": "#ffcc66"
    },
    "annotation": {
      "foreground": "#77a3b1"
    },
    "type": {
      "foreground": "#c94f4f"
    },
    "property": {
      "foreground": "#ffcc66"
    },
    // Svelte-specific tokens
    "svelteElement": {
      "foreground": "#ffab91" // Custom Svelte components
    },
    "svelteTag.html": {
      "foreground": "#d4a169" // Standard HTML tags in Svelte
    },
    "svelteScript": {
      "foreground": "#99c794" // Embedded JavaScript expressions
    },
    "svelteStyle": {
      "foreground": "#ffcc66" // Style tags and CSS in Svelte
    },
    "svelteTransition": {
      "foreground": "#c94f4f" // Svelte transition directives
    },
    "svelteDirective": {
      "foreground": "#d46a6a" // Directives like `bind`, `if`, `each`
    }
  }
}
